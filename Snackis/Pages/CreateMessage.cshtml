@page
@model Snackis.Pages.CreateMessageModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Models.User> SignInManager
@inject UserManager<Models.User> UserManager
@{
    ViewData["Title"] = "Send Private Message";
}

<h1>Send Private Message</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="PrivateMessage.ReceiverId">Recipient</label>
        <input asp-for="PrivateMessage.ReceiverId" class="form-control" />
        <span asp-validation-for="PrivateMessage.ReceiverId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrivateMessage.Subject"></label>
        <input asp-for="PrivateMessage.Subject" class="form-control" />
        <span asp-validation-for="PrivateMessage.Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrivateMessage.Message"></label>
        <textarea asp-for="PrivateMessage.Message" class="form-control"></textarea>
        <span asp-validation-for="PrivateMessage.Message" class="text-danger"></span>
    </div>
    <br />
    <input type="hidden" asp-for="PrivateMessage.SenderId" />
    <button type="submit" class="btn btn-primary">Send</button>
</form>

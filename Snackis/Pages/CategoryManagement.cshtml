@page
@model Snackis.Pages.CategoryManagementModel
@{
    ViewData["Title"] = "Category Management";
}

<h2>Category Management</h2>

@if (Model.Categories != null && Model.Categories.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@category.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No categories found.</p>
}

<h3>Add New Category</h3>
<form method="post" asp-page-handler="Add">
    <div class="form-group">
        <label asp-for="NewCategory.Name"></label>
        <input asp-for="NewCategory.Name" class="form-control" />
        <span asp-validation-for="NewCategory.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewCategory.Description"></label>
        <textarea asp-for="NewCategory.Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="NewCategory.Description" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add</button>
</form>